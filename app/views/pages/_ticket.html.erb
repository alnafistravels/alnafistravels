  let count = 1
  $(document).ready(function(){
    console.log("hii")
    $("#add_name").on("click",function(){
      $("#add_name_show").append('<br><div class="row" ><div class="col-3" ></div><div class="col-6" ><input multiple="multiple" type="text" value="" name="entry[name][]" class=" form-control" id="entry_name_'+ count +'"></div><button type="button" class="col-2 btn btn-danger del" id="'+ count++ +'" >Delete</button><br></div>')
    })
    $(".del").on("click",function(){
    console.log("del")
      let idd = $(this).attr('id')
